<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.scoula.backend.mapper.TripMapper">

    <!-- 사용자 ID로 여행 목록 조회 -->
    <select id="findTripsByMemberId" resultType="org.scoula.backend.dto.TripDTO">
        SELECT * FROM trip WHERE member_id = #{memberId}
    </select>

    <insert id="insertTrip" parameterType="TripDTO">
        INSERT INTO trip (member_id, title, destination, start_date, end_date)
        VALUES (#{memberId}, #{title}, #{destination}, #{startDate}, #{endDate})
    </insert>

</mapper>