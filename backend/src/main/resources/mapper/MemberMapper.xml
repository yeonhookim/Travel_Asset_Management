<?xml version="1.0" encoding="UTF-8" ?>
<!--실제 실행될 SQL 구문을 정의하는 XML 파일-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.backend.mapper.MemberMapper">
    <!-- 회원가입 SQL -->
    <insert id="insertMember" parameterType="org.scoula.backend.dto.MemberDTO">
        INSERT INTO member (username, password, nickname)
        VALUES (#{username}, #{password}, #{nickname})
    </insert>

    <!-- username(사용자 ID)으로 회원 정보 조회 -->
    <select id="findByUsername" parameterType="String" resultType="org.scoula.backend.dto.MemberDTO">
        SELECT * FROM member WHERE username = #{username}
    </select>
</mapper>